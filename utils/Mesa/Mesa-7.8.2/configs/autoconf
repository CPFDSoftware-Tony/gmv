MKDEP = /usr/X11R6/bin/makedepend
MKDEP_OPTIONS = -fdepend -I/usr/lib64/gcc/x86_64-suse-linux/4.1.0/include
INSTALL = /usr/bin/install -c

# Python and flags (generally only needed by the developers)
